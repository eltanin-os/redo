#!/usr/bin/automate -s std-default,std-c
@program{
	src/redo
}
$@program{
	library{
		tertium
	}
}
@manpage{
	transform{
		module:std-glob
		man/*
	}
}
install-program{
	%binaries{
		always
		ifchange
		ifcreate
		ood
		sources
		stamp
		targets
		whichdo
	}
	command{
		if { ln -s redo %{binaries} }
	}
}
